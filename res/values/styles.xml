<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
 
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen" />

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>
    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
</style> 
    

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />
<color name="AccentColor">#a82d3c</color>
    <color name="PopupColor">@color/AccentColor</color>
    <color name="PopupTextColor">#ffffff</color>
    <color name="ButtonTextColor">#ffffff</color>
    <color name="BlurbColor">#a0a0a0</color>
    <color name="SignOutButtonBackground">#e0e0e0</color>
    <color name="SignOutButtonTextColor">#404040</color>

    <dimen name="TitleSize">30sp</dimen>


    <style name="GameScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LLScreen" parent="@style/GameScreen">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>
    </style>

    <style name="GameplayScreen" parent="@style/LLScreen">
        <item name="android:gravity">center</item>
    </style>


    <style name="InvPopup" parent="@style/LLScreen">
        <item name="android:background">@color/PopupColor</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
        <style name="Tutorial" parent="@style/LLScreen">
        <item name="android:background">@color/PopupColor</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top|right</item>
        <item name="android:orientation">horizontal</item>
    </style>
    

    <style name="GameTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/game_title</item>
        <item name="android:textColor">@color/AccentColor</item>
        <item name="android:textSize">@dimen/TitleSize</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>
    <style name="GameName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/game_name</item>
        <item name="android:textColor">@color/AccentColor</item>
        <item name="android:textSize">@dimen/TitleSize</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="Blurb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ButtonTextColor</item>
    </style>

    <style name="GameBlurb" parent="@style/Blurb">
        <item name="android:text">@string/game_blurb</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="SignInButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
           
            
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/signin_button</item>
            <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="FacebookLoginButton">
         <item name="android:layout_marginRight">14dp</item>
                        <item name="android:layout_marginLeft">14dp</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_gravity">center_horizontal</item>
</style>

    <style name="GameButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/AccentColor</item>
        <item name="android:textColor">@color/ButtonTextColor</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="MainScreenButton" parent="@style/GameButton">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="MainScreenButtonBlurb" parent="@style/GameBlurb">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="InvPopupText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/PopupTextColor</item>
        <item name="android:text">@string/inv_popup_text</item>
        <item name="android:gravity">center</item>
    </style>
    
     <style name="tutorial_one">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/PopupTextColor</item>
        <item name="android:text">@string/tutorial_one</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tutorial_two">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/PopupTextColor</item>
        <item name="android:text">@string/tutorial_two</item>
        <item name="android:gravity">center</item>
    </style>
<style name="tutorial_three">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/PopupTextColor</item>
        <item name="android:text">@string/tutorial_three</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tutorial_four">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/PopupTextColor</item>
        <item name="android:text">@string/tutorial_four</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tutorial_five">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/PopupTextColor</item>
        <item name="android:text">@string/tutorial_five</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tutorial_six">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/PopupTextColor</item>
        <item name="android:text">@string/tutorial_six</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="InvPopupButton" parent="@style/GameButton">
        <item name="android:background">@color/ButtonTextColor</item>
        <item name="android:textColor">@color/AccentColor</item>
    </style>

    <style name="SignOutButton" parent="@style/GameButton">
        <item name="android:background">@color/SignOutButtonBackground</item>
        <item name="android:textColor">@color/SignOutButtonTextColor</item>
    </style>

    <style name="FigureView">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="FigureLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ScoreToast">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="ScoresBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="ButtonsBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ScoreText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="Instructions" parent="@style/Blurb">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="ScoreLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ScoreDisplay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/AccentColor</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="PlacementDisplay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/BlurbColor</item>
    </style>

    <style name="SectionLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/AccentColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="Theme.App" parent="@android:style/Theme.Light">
        <item
            name="android:windowBackground">@drawable/grey_background_pattern</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:textAppearance">@style/DefaultText</item>
        <item name="android:textAppearanceLarge">@style/Heading</item>
        <item name="android:textAppearanceMedium">@style/SubHeading</item>
    </style>

    <style name="DefaultText" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="GuessWordText" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Heading" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">30sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SubHeading" parent="@android:style/TextAppearance.Medium">
    </style>

    <style name="HelpText">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="HelpText.Heading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
    </style>

    <style name="HelpText.Caption">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
